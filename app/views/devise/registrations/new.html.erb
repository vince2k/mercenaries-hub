<div class="container">
  <div class="row">
    <div class="col">
      <h2>Créer un compte</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }, data: {turbo: false}) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, label: "Prénom",
                      required: false,
                      autofocus: true %>
          <%= f.input :last_name, label: "Nom",
                      required: false,
                      autofocus: true %>
          <%= f.input :nickname, label: "Pseudo",
                      required: false,
                      autofocus: true %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password, label: "Mot de passe",
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirmation du mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :photo, as: :file, label: "Sélectionnez une photo" %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, "Créer le compte" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
