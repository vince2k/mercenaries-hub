<h1>Ajouter un avis</h1>

<%= simple_form_for @mercenary do |form| %>
  <div>
    <%= form.input :name, label: "Nom du mercenaire", required: true %>
  </div>

  <div>
    <%= form.input :bio, as: :text, label: "Ajouter un avis", required: false %>
  </div>

  <div>
    <%= form.submit "Ajouter un avis", class: "btn btn-primary" %>
  </div>
<% end %>
