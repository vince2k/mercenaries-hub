<%= simple_form_for(@mercenary) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Nom du mercenaire" %>
    <%= f.input :bio,as: :text, label: "Biographie" %>
    <%= f.input :price_per_day, label: "Tarif journalier (€)" %>
    <%= f.input :address, label: "Adresse" %>
    <%= f.input :specialty, label: "Spécialité" %>
    <%= f.input :picture, as: :file, label: "Télécharger une photo" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Editer le mercenaire", class: "btn btn-primary" %>
  </div>
<% end %>
