<%= simple_form_for(@mercenary) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :specialty %>
    <%= f.input :bio %>
    <%= f.input :price_per_day %>
    <%= f.input :address %>
    <%= f.input :picture, as: :file, label: "Upload a photo" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
